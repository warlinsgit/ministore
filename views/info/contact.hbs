<section id="contact">
    <div class="container contact text-center">
    <header>
        <h2 class="pb-5">Contact Us</h2>
    </header>
    <div class="row contact1 pb-5" >
    <div class="col-sm-6" >
        <div class="form-holder ">
            <header class="pb-3">
                <h3>Feel free to contact us</h3>
            </header>
            <form action='contact/send' method='post'>
                <div class="md-form ">
                    <label for="contact-name" class="">Your name</label>
                    <input type="text" id="contact-name" name="name" class="form-control text-left" required autofocus>
                </div>
                <div class="md-form">
                    <label for="contact-email" class="">Your email</label>
                    <input type="email" id="contact-email" name="email" class="form-control text-left">
                </div>
                <div class="md-form">
                    <label for="contact-Subject" class="">Subject</label>
                    <input type="text" id="contact-Subject" name="subject" class="form-control text-left">
                </div>
                <div class="md-form">
                    <label for="contact-Subject" class="">Message</label>
                    <textarea type="text" id="contact-message" class="form-control text-left" name="message" rows="5" style="padding-bottom: 1.2rem;" required>
                    </textarea>
                </div>
                <div class="text-center">
                    <br>
                    <button type="submit" onclick="validateField()" class="btn btn-info px-6"  >Send Message</button>
                </div>
            </form>
        </div>
    </div>
