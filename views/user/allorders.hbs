<div class="container">
	<div class="page-header">
		<div class="container">
			<div class="row">
				<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
					<div class="page-caption">
						<h1 class="page-title">Orders Purchased</h1>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- /.page-header-->
	<!-- news -->
	<div class="card-section">
		<div class="container">
			<div class="card-block bg-white mb30">
				<div class="row">
					<div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
						<!-- section-title -->

						<!-- /.section-title -->
					</div>
				</div>
			</div>

			<div class="row">
				<div class="col justify-content-between ">

					<hr>
					<h2>Shopping Order</h2>

					{{# each orders }}
						<div class="panel panel-default p-4">

							<div class="panel-body">

								<ul class="list-group">

									{{# each this.items }}

										<li class="list-group-item d-flex justify-content-between r p-4">


											{{ this.item.product_name }} | {{this.qty }} Units.
											<span class="badge badge-primary badge-pill"> € {{ this.price}}</span>
										</li>

										{{/ each }}

								</ul>

							</div>


							<div class="panel-footer float-right p-2">Total: € {{ this.cart.totalPrice }}</div>

							<br>
						</div>
						<h3 class="text-info">Customer Details: </h3>
						<address style="background: #eee"><b>User:</b>{{ this.name }} <br>
							<b> Shopping date:</b>{{ this.date_shopping }} <br>
							<b> Address:</b>{{ this.address }} </address>
						<b> IdUser:</b>{{ this.user  }} </address>
						<hr class="border border-default">
						{{/ each }}

				</div>


			</div>


		</div>


	</div>
</div>

<div class="p-5">

</div>
<div class="form-group">
	<!--  <input type="hidden" name="_csrf" value="{{csrfToken}}">  -->


	<a class="btn btn-secondary" href="/product/list"><i class="fa fa-list-alt"></i> View All</a>
	<a class="btn btn-success" href="/product"><i class="fa fa-list-alt"></i> Create New</a>
</div>
