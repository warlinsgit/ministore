
<div class="container">

  {{# if products }}

<div class="row">
<h4 class="float-left p-4" >Shopping Cart</h4>
  <div class="col-sm-12 col-md-10 col-md-offset-1">

    <table class="table ">

          <thead>
              <tr>
                  <th>Game</th>
                  <th>Qty</th>
                  <th>Price</th>
                  <th>Action </th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
                  {{# each products }}
                    <tr>
                        <td class="col-sm-8 col-md-6">
                        <div class="media">
                            <div class="media-body">
                              <h5 class="media-heading item-name"><a href="#">{{this.item.product_name}}</a></h5>

                            </div>
                        </td>
                        <td class="col-sm-1 col-md-1 text-center"><strong>{{ this.qty }}</strong></td>


                        <td class="col-sm-1 col-md-1 text-center"><strong>€{{ this.price }}</strong></td>


                        <td class="col-sm-1 col-md-1 "><strong> {{totalPrice}}</strong></td>


                        <td class="col-sm-1 col-md-1">
                      <a class="text-danger remove-item" href="/reduce/{{this.item._id}}">Remove</a>  <!-- <a class="text-danger" href="/remove/{{this.item._id}}">Remove All</a> --></td>
                    </tr>
                    {{/ each }}
                    <tr>
                        <td class="">   </td>
                        <td>   </td>
                        <td>   </td>

                        <td ><h3 class="total-shoppingcart">Total:</h3></td>
                        <td ><h3 class="total-shoppingcart"><strong>€ {{totalPrice}}</strong></h3></td>
                    </tr>
                    <tr>
                        <td>   </td>
                        <td>   </td>
                        <td>   </td>
                        <td>

                        <td>

                          <a href="/checkout" class="btn btn-success btn-md buttonshopping">Checkout</a>
                        </td>
                    </tr>

                </tbody>

            </table>
  </div>
  {{ else }}
<div class="container">


        <div class="text-center col-md-offset-3 p-5">

              <h3>No Itens in Cart </h3>
        </div>
        <div class="text-center p-5">
            <a class="btn btn-info" href="/">Return To Shop</a>
        </div>

    </div>
    {{/if}}
  </div>

</div>
